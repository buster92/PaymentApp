<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaymentApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mercado_yellow</item>
        <item name="colorPrimaryVariant">@color/mercado_yellow</item>
        <item name="colorOnPrimary">@color/text_gray</item>
        <item name="android:textColorPrimary">@color/text_gray</item>
        <item name="colorPrimaryDark">@color/text_gray</item>
        <item name="android:colorPrimaryDark">@color/text_gray</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>